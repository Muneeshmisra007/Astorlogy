<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff4848"
        android:gravity="top|center"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center" >

            <Button
                android:id="@+id/aquarius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/aquarius"
                android:text="Aquarius \n (20 Jan-18 Feb)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/aries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_span="1"
                android:background="#00000000"
                android:drawableTop="@drawable/aries"
                android:text="Aries \n (21 Mar-19 Apr)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/cancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/cancer"
                android:text="Cancer \n (21 Jun-22 Jul)"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center" >

            <Button
                android:id="@+id/capricorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/capricorn"
                android:text="Capricorn \n (22 Dec-19 Jan)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/gemini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/gemini"
                android:text="Gemini \n (21 May-20 Jun)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/leo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/leo"
                android:text="Leo \n (23 Jul-22 Aug)"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center" >

            <Button
                android:id="@+id/libra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/libra"
                android:text="Libra \n (23 Sept-22 Oct)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/pisces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/pisces"
                android:text="Pisces \n (19 Feb- 20 Mar)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/sagittarius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/sagittarius"
                android:text="Sagittarius \n (22 Nov-21 Dec)"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center" >

            <Button
                android:id="@+id/scorpio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/scorpio"
                android:text="Scorpio \n (23 Oct-21 Nov)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/taurus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/taurus"
                android:text="Taurus \n (20 April-20 May)"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/virgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:background="#00000000"
                android:drawableTop="@drawable/virgo"
                android:text="Virgo \n (23 Aug- 22 Sep)"
                android:textColor="#ffffffff" />
        </TableRow>
    </TableLayout>

</ScrollView>